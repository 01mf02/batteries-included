BYTE_ENABLED   = true
NATIVE_ENABLED = true

USE_OCAMLFIND = true

OCAMLDEP_MODULES_ENABLED = false

NAME = aaa

.PHONY: clean
clean:
    rm -f $(filter-proper-targets $(ls R, .))

.SUBDIRS: src

.PHONY: all
all: src/batteries.cmxa src/batteries.cma

.PHONY: install
install: all
	$(OCAMLFIND) install $(NAME) build/META \
	src/*.mli src/*.cmi src/*.cma src/*.cmxa

.PHONY: uninstall
uninstall:
	$(OCAMLFIND) remove $(NAME)

.DEFAULT: all

